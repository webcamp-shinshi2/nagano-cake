<h1>Cart_items#index</h1>
<h3>ショッピングカート</h3>
  <%= link_to "空にする", cart_items_all_destroy_path, method: :delete, data: { confirm: "本当にカートを空にしますか？" } %>
  
    <% @cart_items.each do |cart_item| %>
        <%= cart_item.product.name %>
       ¥<%= ((cart_item.product.price * 1.1).floor).to_s(:delimited) %>
       
        <%= form_with model: cart_item, local: true do |f| %>
            <%= f.number_field :amount %>
            <%= f.submit "変更", class: "btn btn-success" %>
        <% end %> 
      
        <!--%= ((cart_item.product.price * 1.1) * cart_item.amount).round.to_s(:delimited) %>-->
        
        <%= link_to "削除する", destroy_cart_path(cart_item), method: :delete %>
    <% end %>
    
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        
    合計金額 ￥<%= @total_price.round.to_s(:delimited) %>
        
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>