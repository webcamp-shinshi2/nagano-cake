<div class="container">
  <div class="row my-4">
   <div class="col">
    <h5>管理者ログイン</h5>
   </div>
  </div>

  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <table class="table-borderless">
       <tr>
       <div class="field">
        <th><%= f.label :メールアドレス %></th>
        <th><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40, placeholder: "sample@example.com" %></th>
       </div>
       </tr>
  
       <tr>
        <div class="field">
         <th><%= f.label :パスワード %></th>
         <th><%= f.password_field :password, autocomplete: "current-password", size: 30 %></th>
        </div>
       </tr>
      </table>
      
     <br>
     
     <tr>
      <th></th>
       <div class="actions">
         <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
       </div>
     </tr> 
    <% end %>
  </div>
</div>
   
